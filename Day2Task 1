<!DOCTYPE html>
<html>
<head>
  <title>Conditional Statements Practice</title>
</head>
<body>

<script>

let age = prompt("Enter your age:");
if (age >= 18) {
  document.write("You are eligible to vote.<br>");
}
let number = prompt("Enter a number:");
if (number % 2 == 0) {
  document.write("The number is even.<br>");
} else {
  document.write("The number is odd.<br>");
}

let mark = prompt("Enter your marks:");
if (mark >= 90) {
  document.write("Grade: A<br>");
} else if (mark >= 75) {
  document.write("Grade: B<br>");
} else if (mark >= 50) {
  document.write("Grade: C<br>");
} else {
  document.write("Grade: F<br>");
}


let day = prompt("Enter a number (1-7) for day of the week:");
switch (parseInt(day)) {
  case 1:
    document.write("Sunday<br>");
    break;
  case 2:
    document.write("Monday<br>");
    break;
  case 3:
    document.write("Tuesday<br>");
    break;
  case 4:
    document.write("Wednesday<br>");
    break;
  case 5:
    document.write("Thursday<br>");
    break;
  case 6:
    document.write("Friday<br>");
    break;
  case 7:
    document.write("Saturday<br>");
    break;
  default:
    document.write("Invalid day number<br>");
}
</script>

</body>
</html>

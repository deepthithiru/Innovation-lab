<!DOCTYPE html>
<html>
<head>
  <title>Loop Control Practice</title>
</head>
<body>

<script>
let i = 1;
while (i <= 10) {
  document.write(i + "<br>");
  i++;
}

let userInput;
do {
  userInput = prompt("Enter 'ok' to proceed:");
} while (userInput.toLowerCase() !== "ok");

let n = prompt("Enter a number to print first N natural numbers:");
for (let j = 1; j <= n; j++) {
  document.write(j + "<br>");
}

for (let row = 1; row <= 10; row++) {
  for (let col = 1; col <= 10; col++) {
    document.write(row + " x " + col + " = " + (row * col) + "<br>");
  }
  document.write("<br>");
}
</script>

</body>
</html>
